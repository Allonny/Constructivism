# Раскладку клавиш смотреть здесь
# xmodmap -pke

# Конфигурационный файл i3
# Документация://i3wm.org/docs/userguide.html

# Путь до директориям конфигурации и скриптов
set $confpath $HOME/.config/i3
set $scriptpath $HOME/.config/i3/scripts

# Клавиша модификатор (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Стандартный терминалал
set $term xfce4-terminal

# Стандартный файловый менеджер
set $files thunar

workspace_layout default




################ Настройки звука и экрана ################

# exec --no-startup-id pa-applet
# exec --no-startup-id pulseaudio
# bindsym $mod+Ctrl+m exec $term -e 'alsamixer'
# exec --no-startup-id xfce4-volumed-pulse
# $mod+M
bindcode $mod+58 --release exec pavucontrol

# Для Fedora
bindsym XF86AudioRaiseVolume --release exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume --release exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute --release exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute --release exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Для Manjaro
# bindsym XF86AudioRaiseVolume --release exec amixer -D pulse sset Master 5%+
# bindsym XF86AudioLowerVolume --release exec amixer -D pulse sset Master 5%-
# bindsym XF86AudioMute --release exec amixer -D pulse sset Master toggle

bindsym XF86AudioPlay --release exec --no-startup-id playerctl play-pause
bindsym XF86AudioStop --release exec --no-startup-id playerctl stop
bindsym XF86AudioNext --release exec --no-startup-id playerctl next
bindsym XF86AudioPrev --release exec --no-startup-id playerctl previous

bindsym XF86MonBrightnessUp --release exec $scriptpath/brightness inc
bindsym XF86MonBrightnessDown --release exec $scriptpath/brightness dec




################ Приложения ################

# Закрытие активное окно
# $mod+q
bindcode $mod+24 --release kill
# $mod+Shift+q
bindcode $mod+Shift+24 --release exec --no-startup-id xkill

# Изменение раскладки клавиатуры
bindsym $mod+space --release exec --no-startup-id $scriptpath/keyboard-layout toggle
# bindsym Menu exec --no-startup-id $scriptpath/keyboard-layout toggle

# Меню питания
# Заблокировать экран
# $mod+l
# bindcode $mod+46 --release exec --no-startup-id $scriptpath/blur-lock
bindcode $mod+46 --release exec dm-tool lock
bindsym $mod+Escape --release exec $scriptpath/powermenu

# Обновление системы
# $mod+u
bindcode $mod+30 --release exec $term -e 'yay -Suy'; exec $term -e 'flatpak update'
# bindcode $mod+Shift+30 --release exec $term -e 'flatpak update'
# bindcode $mod+Ctrl+30 --release exec $term -e 'pkexec pacman -Suy && flatpak update'

# Обновление конфигурации окружения
# $mod+,
bindcode $mod+59 --release reload
# $mod+.
bindcode $mod+60 --release restart

# Просмотр открытых приложений
bindsym $mod+Tab --release exec $scriptpath/apps-active

# Меню приложений
bindsym $mod+F1 --release exec $scriptpath/apps-launcher

# Запуск файлового менеджера
bindsym $mod+F2 --release exec $files
bindsym $mod+Shift+F2 --release exec pkexec $files && :
bindsym $mod+backslash --release exec $files
bindsym $mod+Shift+backslash --release exec pkexec $files && :

# Запуск терминала
bindsym $mod+F3 --release exec $term
bindsym $mod+Shift+F3 --release exec $term -e 'pkexec su'
bindsym $mod+Return --release exec $term
bindsym $mod+Shift+Return --release exec $term -e 'pkexec su'

# Запуск редактора кода
bindsym $mod+F4 --release exec flatpak run io.howl.Editor

# Запуск повседневных приложений
bindsym $mod+F5 --release exec flatpak run org.mozilla.Firefox
bindsym $mod+F6 --release exec flatpak run org.telegram.desktop
bindsym $mod+F7 --release exec flatpak run org.signal.Signal
bindsym $mod+F8 --release exec flatpak run org.gnome.Rhythmbox3
# bindsym $mod+Shift+F8 --release exec $term -e 'musikcube'

# Запуск системных утилит
bindsym $mod+F12 --release exec $term -e 'htop'
bindsym $mod+Shift+F12 --release exec $term -e 'pkexec htop'

# Создание скриншотов
bindsym Print --release exec --no-startup-id xfce4-screenshooter -f $HOME/Изображения/Скриншоты
bindsym Ctrl+Print --release exec --no-startup-id xfce4-screenshooter -w $HOME/Изображения/Скриншоты
bindsym Shift+Print --release exec --no-startup-id xfce4-screenshooter -r $HOME/Изображения/Скриншоты
bindsym $mod+Print --release exec --no-startup-id xfce4-screenshooter -f -c
bindsym $mod+Ctrl+Print --release exec --no-startup-id xfce4-screenshooter -w -c
bindsym $mod+Shift+Print --release exec --no-startup-id xfce4-screenshooter -r -c

# Запуск VPN
# $mod+` ($mod+ё)
bindcode $mod+49 --release exec $scriptpath/vpn-toggle "Surfshark Japan UDP"

# Автозапуск приложений
exec_always dex-autostart --autostart --environment i3
exec_always xbacklight -set 100
exec_always killall -q picom             ; picom -Cb ; nitrogen --restore
exec_always killall -q polybar           ; $scriptpath/polybar-launch
exec_always killall -q dunst             ; dunst -conf $confpath/dunst.conf
exec_always killall -q low-battery-alert ; $scriptpath/low-battery-alert 25:10m 20:5m 15:1m 12:30s
exec_always $scriptpath/keyboard-layout set us ru
exec_always $scriptpath/brightness levels 20
exec_always libinput-gestures-setup restart
exec $scriptpath/antiLGBTlaw
exec $scriptpath/war-begun
exec xfce4-power-manager
exec xfce4-clipman
exec nm-applet
exec blueberry-tray
exec /usr/libexec/xfce-polkit

# Специфичные настройки запуска приложений
for_window [class="AlsaMixer"] floating enable
for_window [class="Blueberry"] floating enable
