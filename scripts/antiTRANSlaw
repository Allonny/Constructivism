#!/bin/bash

notify_title="–ó–∞–∫–æ–Ω –ø—Ä–æ—Ç–∏–≤ —Ç—Ä–∞–Ω—Å–ª—é–¥–µ–π üè≥Ô∏è‚Äç‚ößÔ∏è"
notify_body="–î–Ω–µ–π —Å –ø—Ä–∏–Ω—è—Ç–∏—è –∑–∞–∫–æ–Ω–∞ –ø—Ä–æ—Ç–∏–≤ —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è —Ç—Ä–∞–Ω—Å–≥–µ–Ω–¥–µ—Ä–Ω—ã—Ö –ª—é–¥–µ–π: "
notify_icon="dialog-error"
notify_id=$(cat "$(dirname -- "$0")/notify-ids" | grep -oP "${0##*/} \K([\d]+)")

days_from()
{
    echo $(( ($(date +%s) - $(date -d $1 +%s)) / (60 * 60 * 24) ))
}

antiTRANSlaw_date=20230724

days=$(days_from $antiTRANSlaw_date)

notify-send -u critical -r $notify_id -i "$notify_icon" "$notify_title" "$notify_body$days"
