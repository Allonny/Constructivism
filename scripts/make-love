#!/bin/bash

[[ -z "$1" ]] && term="exo-open --launch TerminalEmulator" || term="$1"
name="${0##*/}"

eval "$term --class='$name' --title='$name' /bin/bash -c '
echo -e  \"\e[0;45;90m                 🬱 🬵 🬵🬋🬱 🬹🬞🬚 🬹🬋🬋                 \e[0m\"
echo -e  \"\e[0;45;90m                 █🬎█ █🬋█ █🬴  █🬋🬃                 \e[0m\"
echo -e \"\e[0;101;90m                 🬎 🬎 🬎 🬎 🬎🬁🬌 🬎🬋🬋                 \e[0m\"
echo -e \"\e[0;101;90m                 🬹   🬵🬋🬱 🬹 🬹 🬹🬋🬋                 \e[0m\"
echo -e  \"\e[0;43;90m                 █   █ █ █ █ █🬋🬃                 \e[0m\"
echo -e  \"\e[0;43;90m                 🬎🬋🬋 🬊🬋🬆 🬁🬎🬀 🬎🬋🬋                 \e[0m\"
echo -e  \"\e[0;42;90m                   🬹 🬹 🬵🬋🬱 🬋🬹🬋                   \e[0m\"
echo -e  \"\e[0;42;90m                   █🬪█ █ █  █                    \e[0m\"
echo -e  \"\e[0;46;90m                   🬎 🬎 🬊🬋🬆  🬎                    \e[0m\"
echo -e  \"\e[0;46;90m                   🬹 🬹 🬵🬋🬱 🬹🬋🬱                   \e[0m\"
echo -e  \"\e[0;44;90m                   █🬹█ █🬋█ █🬹🬆                   \e[0m\"
echo -e  \"\e[0;44;90m                   🬆 🬊 🬎 🬎 🬎🬁🬌                   \e[0m\"
read -n 1'"
