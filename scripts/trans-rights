#!/bin/bash

[[ -z "$1" ]] && term="exo-open --launch TerminalEmulator" || term="$1"
name="${0##*/}"

eval "$term --class='$name' --title='$name' /bin/bash -c '
echo -e \"\e[0;106;90m               🬋🬹🬋 🬹🬋🬱 🬵🬋🬱 🬹 🬹 🬵🬋🬱               \e[0m\"
echo -e \"\e[0;106;90m                █  █🬹🬆 █🬋█ █🬪█ 🬊🬋🬱               \e[0m\"
echo -e \"\e[0;106;90m                🬎  🬎🬁🬌 🬎 🬎 🬎 🬎 🬊🬋🬆               \e[0m\"
echo -e \"\e[0;105;90m             🬹🬋🬱 🬇🬹🬃 🬵🬋🬱 🬹 🬹 🬋🬹🬋 🬵🬋🬱             \e[0m\"
echo -e \"\e[0;105;90m             █🬹🬆  █  █🬞🬭 █🬋█  █  🬊🬋🬱             \e[0m\"
echo -e \"\e[0;105;90m             🬎🬁🬌 🬇🬎🬃 🬊🬋🬆 🬎 🬎  🬎  🬊🬋🬆             \e[0m\"
echo -e \"\e[0;107;90m                   🬵🬋🬱 🬹🬋🬱 🬹🬋🬋                   \e[0m\"
echo -e \"\e[0;107;90m                   █🬋█ █🬹🬆 █🬋🬃                   \e[0m\"
echo -e \"\e[0;107;90m                   🬎 🬎 🬎🬁🬌 🬎🬋🬋                   \e[0m\"
echo -e \"\e[0;105;90m               🬹 🬹 🬹 🬹 🬱 🬵 🬵🬋🬱 🬹 🬹               \e[0m\"
echo -e \"\e[0;105;90m               █🬋█ █ █ █🬎█ █🬋█ █🬪█               \e[0m\"
echo -e \"\e[0;105;90m               🬎 🬎 🬊🬋🬆 🬎 🬎 🬎 🬎 🬎 🬎               \e[0m\"
echo -e \"\e[0;106;90m             🬹🬋🬱 🬇🬹🬃 🬵🬋🬱 🬹 🬹 🬋🬹🬋 🬵🬋🬱             \e[0m\"
echo -e \"\e[0;106;90m             █🬹🬆  █  █🬞🬭 █🬋█  █  🬊🬋🬱             \e[0m\"
echo -e \"\e[0;106;90m             🬎🬁🬌 🬇🬎🬃 🬊🬋🬆 🬎 🬎  🬎  🬊🬋🬆             \e[0m\"
read -n 1'"
